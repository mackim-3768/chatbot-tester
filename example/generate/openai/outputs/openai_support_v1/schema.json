{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chatbot Test Sample",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "messages"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user",
              "assistant",
              "tool",
              "function"
            ]
          },
          "content": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    },
    "expected": {},
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}